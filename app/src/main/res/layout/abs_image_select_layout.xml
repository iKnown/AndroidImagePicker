<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
      <com.iknow.imageselect.widget.TitleView
          android:id="@+id/titlebar"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/colorPrimaryDark"
          app:title_text_appearance="@style/text_20_ffffff"
          app:title_btn_left_drawable="@drawable/icon_back"
          app:title_btn_right_text="发送"
          app:title_btn_right_text_appearance="@style/text_16_ffffff"
          app:title_text="全部"/>
      <android.support.v7.widget.RecyclerView
          android:id="@+id/album_pic_recyclerview"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@android:color/white"
          android:gravity="center"
          android:horizontalSpacing="2dip"
          android:listSelector="@android:color/transparent"
          android:numColumns="3"
          android:padding="2dip"
          android:stretchMode="columnWidth"
          android:verticalSpacing="2dip"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/albumView"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="#99000000"
        android:layout_height="match_parent">
      <View
          android:id="@+id/empty_place"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:clickable="true"
          android:layout_weight="1"/>
      <ListView
          android:id="@+id/all_album_list"
          android:layout_width="match_parent"
          android:layout_height="450dp"
          android:divider="#dddddd"
          android:dividerHeight="0.5dp"
          android:background="#FFFFFF"/>
    </LinearLayout>


  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/bottomView"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_gravity="bottom"
      android:gravity="bottom"
      android:background="#666666">
    <TextView
        android:id="@+id/preview_btn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:textSize="18dp"
        android:text="预览"/>

    <TextView
        android:id="@+id/all_album_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/preview_btn"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:gravity="center|left"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="图片和视频"/>

  </RelativeLayout>
</LinearLayout>